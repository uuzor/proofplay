# ProofPlay API Environment Configuration

# Sui Network Configuration
SUI_NETWORK=testnet  # testnet, devnet, mainnet, or localnet
SUI_PACKAGE_ID=0x...  # ProofPlay V2 package ID (from deployment)
ANALYTICS_PACKAGE_ID=0x...  # Analytics package ID (same as SUI_PACKAGE_ID usually)
PROTOCOL_ANALYTICS_ID=0x...  # Protocol Analytics shared object ID

# API Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (optional)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # max requests per window

# Logging (optional)
LOG_LEVEL=info  # error, warn, info, debug
